<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfileActivity">

    <!-- view profile header -->
    <LinearLayout
        android:id="@+id/view_profile_header"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/colorAccent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/view_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"/>

        <TextView
            android:id="@+id/view_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="loading"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/view_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_header"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- view profile group name -->
        <LinearLayout
            android:id="@+id/view_profile_group_name_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/custom_button"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group"
                app:tint="@android:color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_profile_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/view_profile_group_name_action_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                app:tint="@android:color/black"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- view profile phone -->
        <LinearLayout
            android:id="@+id/view_profile_phone_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/custom_button"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_phone"
                app:tint="@android:color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/view_profile_phone_action_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                app:tint="@android:color/black"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- view profile gender -->
        <LinearLayout
            android:id="@+id/view_profile_gender_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/custom_button"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_account"
                app:tint="@android:color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_profile_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/view_profile_gender_action_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                app:tint="@android:color/black"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>